{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les categories de la table category : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / Catégorie : {{ category.name }}</h2
            <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir la categorie</a>
        </div>
    {% else %}
        Aucune category trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}